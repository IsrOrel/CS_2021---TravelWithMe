<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sign_In">

    <fragment
        android:id="@+id/home_screen"
        android:name="com.example.travelwithme.Home_screen"
        android:label="home_screen"
        tools:layout="@layout/home_screen" >
        <action
            android:id="@+id/action_home_screen_to_attractions"
            app:destination="@id/attractions"
            app:popUpTo="@id/home_screen" />
        <action
            android:id="@+id/action_home_screen_to_my_Trips"
            app:destination="@id/my_Trips"
            app:popUpTo="@id/my_Trips" />
        <action
            android:id="@+id/action_home_screen_to_calendar"
            app:destination="@id/calendarFragment" />
    </fragment>
    <fragment
        android:id="@+id/attractions"
        android:name="com.example.travelwithme.Attractions"
        android:label="Attractions">
        <action
            android:id="@+id/action_attractions_to_calendar"
            app:destination="@id/calendarFragment">
            <argument
                android:name="attractionTitle"
                app:argType="string" />
            <argument
                android:name="eventDate"
                app:argType="long" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.travelwithme.CalendarFragment"
        android:label="CalendarFragment">
        <argument
            android:name="attractionTitle"
            app:argType="string" />
        <argument
            android:name="eventDate"
            app:argType="long" />
        <action
            android:id="@+id/action_calendarFragment_to_home_screen"
            app:destination="@id/home_screen" />
    </fragment>
    <fragment
        android:id="@+id/my_Trips"
        android:name="com.example.travelwithme.My_Trips"
        android:label="my__trips"
        tools:layout="@layout/my__trips" >
        <action
            android:id="@+id/action_my_Trips_to_home_screen"
            app:destination="@id/home_screen"
            app:popUpTo="@id/my_Trips" />
        <action
            android:id="@+id/action_my_Trips_to_add_flight"
            app:destination="@id/add_flight" />
    </fragment>
    <fragment
        android:id="@+id/add_flight"
        android:name="com.example.travelwithme.Add_flight"
        android:label="add__flight"
        tools:layout="@layout/add__flight" >
        <action
            android:id="@+id/action_add_flight_to_my_Trips"
            app:destination="@id/my_Trips"
            app:popUpTo="@id/my_Trips" />
        <action
            android:id="@+id/action_add_flight_to_add_Hotel"
            app:destination="@id/add_Hotel"
            app:popUpTo="@id/add_flight" />
    </fragment>
    <fragment
        android:id="@+id/add_Hotel"
        android:name="com.example.travelwithme.Add_Hotel"
        android:label="add__hotel"
        tools:layout="@layout/add__hotel" >
        <action
            android:id="@+id/action_add_Hotel_to_add_flight"
            app:destination="@id/add_flight"
            app:popUpTo="@id/add_flight" />
        <action
            android:id="@+id/action_add_Hotel_to_home_screen"
            app:destination="@id/home_screen"
            app:popUpTo="@id/add_flight" />
    </fragment>
    <fragment
        android:id="@+id/sign_In"
        android:name="com.example.travelwithme.Sign_In"
        android:label="Sign_In" >
        <action
            android:id="@+id/action_sign_In_to_sign_Up"
            app:destination="@id/sign_Up" />
        <action
            android:id="@+id/action_sign_In_to_my_Trips"
            app:destination="@id/my_Trips" />
    </fragment>
    <fragment
        android:id="@+id/sign_Up"
        android:name="com.example.travelwithme.Sign_Up"
        android:label="Sign_Up" >
        <action
            android:id="@+id/action_sign_Up_to_my_Trips"
            app:destination="@id/my_Trips" />
    </fragment>

</navigation>