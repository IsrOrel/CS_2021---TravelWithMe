<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/travel_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Home_screen"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/orange"
                    android:text="HI"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome User"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" My Trip To: "
                android:textSize="35dp"
                android:gravity="center"

                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8" />
            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="city"
                android:textSize="35dp"
                android:id="@+id/TripCity"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Attraction_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/baseline_attractions_24"
                app:iconTint="@color/orange"
                app:iconPadding="1dp"
                app:iconSize="45dp"
                app:backgroundTint="#66FFFFFF"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Car_Rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/baseline_car_rental_24"
                app:iconTint="@color/orange"
                app:iconPadding="1dp"
                app:iconSize="45dp"
                app:backgroundTint="#66FFFFFF"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/baseline_calendar_today_24"
                app:iconTint="@color/orange"
                app:iconPadding="1dp"
                app:iconSize="45dp"
                app:backgroundTint="#66FFFFFF"
                />


            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkList_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/baseline_checklist_24"
                app:iconTint="@color/orange"
                app:iconPadding="1dp"
                app:iconSize="45dp"
                app:backgroundTint="#66FFFFFF"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="your next flight to:"
                android:textSize="20dp"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:background="@drawable/rounded_background"    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="city"
                android:textSize="20dp"
                android:id="@+id/flightnext"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/rounded_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="countdown"
                android:textSize="20dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/rounded_background"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="your next event:"
                android:textSize="20dp"


                />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/event"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="start"
                android:text="event"
                android:textSize="20dp" />


        </LinearLayout>


      <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <Button
                android:id="@+id/facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:gravity="center"
                android:text="Fun facts about the city:"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/text_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="facts1"
            android:textSize="20dp"
            android:background="@drawable/rounded_background"
            android:textColor="@color/black"
            android:id="@+id/fact1"
            android:padding="10dp"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="facts2"
            android:textSize="20dp"
            android:background="@drawable/rounded_background"
            android:textColor="@color/black"
            android:id="@+id/fact2"
            android:padding="10dp"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="facts3"
            android:textSize="20dp"
            android:background="@drawable/rounded_background"
            android:textColor="@color/black"
            android:id="@+id/fact3"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        </LinearLayout>

          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:id="@+id/floating_action_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|right"
              android:layout_margin="16dp"
              app:srcCompat="@drawable/baseline_add_24" />


          <LinearLayout
              android:id="@+id/fab_menu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="top|right"
              android:layout_marginEnd="24dp"
              android:layout_marginBottom="88dp"
              android:orientation="vertical"
              android:visibility="gone">

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_flight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_airplanemode_active_24"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_hotel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_hotel_24"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_attractions"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_attractions_24"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_car_rental"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_car_rental_24"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_calendar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_calendar_today_24"/>

              <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/fab_notes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  app:fabSize="mini"
                  app:srcCompat="@drawable/baseline_checklist_24"/>
          </LinearLayout>





      </LinearLayout>
    </LinearLayout>
</ScrollView>