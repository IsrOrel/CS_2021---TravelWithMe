<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="50dp"
    android:layout_margin="50dp"
    android:id="@+id/flightInfoDialog"
    android:background="@color/superlight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="flight to:"
            android:id="@+id/FlightToT"
            android:gravity="start"
            android:fontFamily="@font/fredoka_medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/flightToAnswer"
            android:fontFamily="@font/fredoka_medium"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="departure date"
            android:gravity="start"
            android:id="@+id/departureDateT"
            android:fontFamily="@font/fredoka_medium"/>

        <TextView
            android:id="@+id/departureDateAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:fontFamily="@font/fredoka_medium"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/returnDateT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:text="return date"
            android:fontFamily="@font/fredoka_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/returnDateAnswer"
            android:fontFamily="@font/fredoka_medium"/>

    </LinearLayout>
    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/sandyBrown"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fredoka_medium"/>
</LinearLayout>